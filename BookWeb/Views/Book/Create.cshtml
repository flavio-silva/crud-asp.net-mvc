@{
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h3>New Book</h3>

<form method="post" action="@Url.Action("Store")">

    
    <div class="form-group@(ViewData.ModelState["title"] != null && ViewData.ModelState["title"].Errors.Any() ? " has-error" : "")">

        <label for="title" class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="title" value="@ViewBag.Book.Title" placeholder="Type a title" required maxlength="255">
            <span class="help-block">@Html.ValidationMessage("title")</span>
        </div>
    </div>    

    <div class="form-group@(ViewData.ModelState["subtitle"] != null && ViewData.ModelState["subtitle"].Errors.Any() ? " has-error" : "")">
        <label for="subtitle" class="col-sm-2 control-label">Subtitle</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="subtitle" value="@ViewBag.Book.Subtitle" placeholder="Type a subtitle" maxlength="255">
            <span class="help-block">@Html.ValidationMessage("subtitle")</span>
        </div>
    </div>

    <div class="form-group@(ViewData.ModelState["isbn"] != null && ViewData.ModelState["isbn"].Errors.Any() ? " has-error" : "")">
        <label for="isbn" class="col-sm-2 control-label">ISBN</label>
        <div class="col-sm-10">
            <input type="text" name="isbn" value="@ViewBag.Book.Isbn" class="form-control" placeholder="Type a ISBN" required maxlength="17"/>
            <span class="help-block">@Html.ValidationMessage("isbn")</span>
        </div>
    </div>
    <div class="form-group@(ViewData.ModelState["price"] != null && ViewData.ModelState["price"].Errors.Any() ? " has-error" : "")">
        <label for="price" class="col-sm-2 control-label">Price</label>
        <div class="col-sm-10">
            <input type="text" name="price" value="@ViewBag.Book.Price" class="form-control" placeholder="Type a price" required pattern="^([0-9]+)(,[0-9]{2})?$"/>
            <span class="help-block">@Html.ValidationMessage("price")</span>
        </div>

    </div>

    <div class="form-group@(ViewData.ModelState["pages"] != null && ViewData.ModelState["pages"].Errors.Any() ? " has-error" : "")">
        <label for="pages" class="col-sm-2 control-label">Pages</label>
        <div class="col-sm-10">
            <input type="number" name="pages" value="@ViewBag.Book.Pages" class="form-control" placeholder="Type a amount of pages" step="1" required/>
            <span class="help-block">@Html.ValidationMessage("pages")</span>
        </div>
    </div>

    <div class="form-group@(ViewData.ModelState["authors"] != null && ViewData.ModelState["authors"].Errors.Any() ? " has-error" : "")">
        <label for="authors" class="col-sm-2 control-label">Authors</label>
        <div class="col-sm-10">
            <input type="text" name="authors" value="@ViewBag.Book.Authors" class="form-control" placeholder="Authors" maxlength="255" required/>
            <span class="help-block">@Html.ValidationMessage("authors")</span>
        </div>
    </div>

    <div class="form-group@(ViewData.ModelState["formats"] != null && ViewData.ModelState["formats"].Errors.Any() ? " has-error" : "")">
        <label for="formats" class="col-sm-2 control-label">Formats</label>
        <div class="col-sm-10">
            <input type="text" name="formats" value="@ViewBag.Book.Formats" class="form-control" placeholder="Formats" maxlength="255" required/>
            <span class="help-block">@Html.ValidationMessage("formats")</span>
        </div>
    </div>

    <div class="form-group@(ViewData.ModelState["categories"] != null && ViewData.ModelState["categories"].Errors.Any() ? " has-error" : "")">
        <label for="categories" class="col-sm-2 control-label">Categories</label>
        <div class="col-sm-10">
            <input type="text" name="categories" value="@ViewBag.Book.Categories" class="form-control" placeholder="Categories" maxlength="255" required/>
            <span class="help-block">@Html.ValidationMessage("categories")</span>
        </div>
    </div>

    <div class="form-group@(ViewData.ModelState["publishedAt"] != null && ViewData.ModelState["publishedAt"].Errors.Any() ? " has-error" : "")">
        <label for="publishedAt" class="col-sm-2 control-label">Published at</label>
        <div class="col-sm-10">
            <input type="date" name="publishedAt" value="@Html.FormatValue(ViewBag.Book.PublishedAt, "{0:yyyy-MM-dd}")" class="form-control" placeholder="Published At" required/>
            <span class="help-block">@Html.ValidationMessage("publishedAt")</span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="@Url.Action("Index")" class="btn btn-default">
                Cancel
            </a>
        </div>
    </div>

</form>
